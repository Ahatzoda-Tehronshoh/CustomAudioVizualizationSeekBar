<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomVizualizationSeekBar" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="customSeekBarViewStyle">@style/UserCustomSeekBarViewStyle</item>
    </style>

    <style name="DefaultCustomSeekBarViewStyle" parent="Widget.AppCompat.SeekBar">
        <item name="columnsColor">@color/purple_500</item>
    </style>

    <style name="UserCustomSeekBarViewStyle" parent="DefaultCustomSeekBarViewStyle">
        <item name="columnsColor">@color/purple_200</item>
    </style>

</resources>